<ruleset name="Glarner Kantonalbank">
    <target host="glkb.ch" />
    <target host="*.glkb.ch" />

    <securecookie host="^(.*\.)?glkb\.ch$" name=".+" />

    <rule from="^https?://glkb\.ch/"
        to="https://www.glkb.ch/"/>
    <rule from="^http://([^/:@]+)?\.glkb\.ch/"
        to="https://$1.glkb.ch/" />
</ruleset>
