<!--
	Fully covered domains:

		- leo.org

		- *.leo.org:

			- (www.)dict
			- (www.)pda
			- www

-->
<ruleset name="Leo.org">

	<target host="leo.org" />
	<target host="*.leo.org" />


	<rule from="^http://(?:www\.)?leo\.org/"
		to="https://www.leo.org/" />

	<rule from="^http://([^/:@]+)\.leo\.org/"
		to="https://$1.leo.org/" />

</ruleset>
