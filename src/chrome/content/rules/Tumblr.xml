<ruleset name="Tumblr (partial)">

	<target host="tumblr.com" />
	<target host="*.tumblr.com" />


	<!--	Tracking cookies:
					-->
	<securecookie host="^(?:secure\.assets|www)\.tumblr\.com$" name="^__utmf$" />


	<!--	These paths 302 to http:

			- about$
			- apps$
			- audio_file/
